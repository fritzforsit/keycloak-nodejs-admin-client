{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "module": "Node12",
    "target": "ES2020",
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "types"
  },
  "include": ["src"]
}
